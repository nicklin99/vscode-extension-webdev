{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"cwd": "${workspaceFolder}",           // 工作目录
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
            "preLaunchTask": "devs",
			"env": {
				"VSCODE_EXTENSION_MODE": "development"
			}
        }
    ]
}